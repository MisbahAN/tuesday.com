<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks for <%= list_name %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f4f4f4;
        }
        .create-task-form, .add-user-form {
            margin-top: 20px;
        }
        .create-task-form input, .create-task-form textarea, .create-task-form button,
        .add-user-form input, .add-user-form button {
            display: block;
            margin: 10px 0;
            width: 100%;
            padding: 10px;
        }
        .mark-completed-btn {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }
        .mark-completed-btn:hover {
            background-color: #45a049;
        }
        .take-task-btn {
            background-color: #2196F3;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }
        .take-task-btn:hover {
            background-color: #1e88e5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Tasks for <%= list_name %></h1>

        <!-- Assigned Tasks Table -->
        <h2>Assigned Tasks</h2>
        <table>
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% assignedTasks.forEach(task => { %>
                    <tr>
                        <td><%= task.task_name %></td>
                        <td><%= task.description %></td>
                        <td><%= task.due_date ? task.due_date.toLocaleDateString() : 'No due date' %></td>
                        <td>
                            <% if (!task.completed) { %>
                                <form action="/marktaskcompleted" method="POST" style="display: inline;">
                                    <input type="hidden" name="task_id" value="<%= task.task_id %>">
                                    <button type="submit" class="mark-completed-btn">Mark as Completed</button>
                                </form>
                            <% } else { %>
                                <span style="color: #4CAF50; font-weight: bold;">âœ“ Completed</span>
                            <% } %>

                        </td>
                    </tr>
                <% }); %>
                <% if (assignedTasks.length === 0) { %>
                    <tr>
                        <td colspan="4">No tasks found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- Available Tasks Table -->
        <h2>Available Tasks</h2>
        <table>
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% nonAssignedTasks.forEach(task => { %>
                    <tr>
                        <td><%= task.task_name %></td>
                        <td><%= task.description %></td>
                        <td><%= task.due_date ? task.due_date.toLocaleDateString() : 'No due date' %></td>
                        <td>
                            <form action="/assigntask" method="POST" style="display: inline;">
                                <input type="hidden" name="task_id" value="<%= task.task_id %>">
                                <input type="hidden" name="list_id" value="<%= list_id %>">
                                <input type="hidden" name="username" value="<%= username %>">
                                <button type="submit" class="take-task-btn">Take Task</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
                <% if (nonAssignedTasks.length === 0) { %>
                    <tr>
                        <td colspan="4">No tasks found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- Create Task Form -->
        <div class="create-task-form">
            <h2>Create a New Task</h2>
            <form action="/createtask" method="POST">
                <input type="text" name="task_name" placeholder="Task Name" required>
                <textarea name="description" placeholder="Task Description (Optional)"></textarea>
                <input type="hidden" name="username" value="<%= username %>">
                <input type="date" name="due_date" placeholder="Due Date (Optional)">
                <input type="hidden" name="list_id" value="<%= list_id %>">
                <div style="display: flex; gap: 10px; margin: 10px 0;">
                    <button type="submit" name="assign_to_me" value="true" class="mark-completed-btn">Create & Assign to Me</button>
                    <button type="submit" name="assign_to_me" value="false" class="take-task-btn">Create as Available Task</button>
                </div>
            </form>
        </div>

        <!-- Add User to List Form -->
        <div class="add-user-form">
            <h2>Add User to List</h2>
            <form action="/addusertolist" method="POST">
                <input type="text" name="username" placeholder="Username" required>
                <input type="hidden" name="list_id" value="<%= list_id %>">
                <button type="submit">Add User</button>
            </form>
        </div>
    </div>
</body>
</html>
